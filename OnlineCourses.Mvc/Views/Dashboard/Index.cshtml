@{
    Layout = null;  // Evita que se renderice el layout principal
    ViewBag.Title = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - OnlineCourses.Mvc</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* LAYOUT GENERAL */
        .app-layout {
            display: flex;
            min-height: 100vh;
        }

        /* SIDEBAR */
        .sidebar {
            width: 260px;
            background-color: #1f2937;
            color: #fff;
            padding: 1.5rem;
        }

        .sidebar .logo {
            font-size: 1.4rem;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .sidebar a {
            color: #d1d5db;
            display: block;
            padding: 0.6rem 0.8rem;
            border-radius: 6px;
            text-decoration: none;
        }

        .sidebar a:hover,
        .sidebar a.is-active {
            background-color: #374151;
            color: #fff;
        }

        /* CONTENT AREA */
        .content-area {
            flex: 1;
            padding: 2rem;
            background: #f9fafb;
        }

        /* Boxes de estadísticas */
        .box {
            background-color: #fff;
            border-radius: 6px;
            padding: 1rem;
            margin-bottom: 1rem;
            box-shadow: 0 0 5px rgba(0,0,0,0.05);
        }

        .columns {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .column {
            flex: 1;
        }

        .heading {
            font-size: 0.9rem;
            color: #6b7280;
        }

        .title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .buttons .button {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>

<div class="app-layout">

    <!-- SIDEBAR -->
    <aside class="sidebar">
        <div class="logo">
            <i class="fas fa-graduation-cap"></i> OnlineCourses
        </div>

        <p class="menu-label">General</p>
        <a class="is-active">
            <i class="fas fa-chart-line mr-2"></i> Dashboard
        </a>

        <p class="menu-label mt-4">Cursos</p>
        <a href="@Url.Action("Index", "Courses")">
            <i class="fas fa-book mr-2"></i> Ver Cursos
        </a>
        <a href="@Url.Action("Create", "Courses")">
            <i class="fas fa-plus mr-2"></i> Crear Curso
        </a>

    </aside>

    <!-- CONTENT -->
    <main class="content-area">

        <h1 class="title">Dashboard</h1>
        <p class="subtitle">Bienvenido al Sistema de Gestión de Cursos</p>

        <!-- ESTADÍSTICAS -->
        <div class="columns">
            <div class="column">
                <div class="box has-background-info-light">
                    <p class="heading">Total Cursos</p>
                    <p class="title" id="totalCourses">0</p>
                </div>
            </div>
            <div class="column">
                <div class="box has-background-success-light">
                    <p class="heading">Publicados</p>
                    <p class="title" id="publishedCourses">0</p>
                </div>
            </div>
            <div class="column">
                <div class="box has-background-warning-light">
                    <p class="heading">Borradores</p>
                    <p class="title" id="draftCourses">0</p>
                </div>
            </div>
        </div>

        <!-- ACCIONES -->
        <div class="box">
            <h2 class="subtitle">Acciones rápidas</h2>
            <div class="buttons">
                <a href="@Url.Action("Create", "Courses")" class="btn btn-primary">
                    <i class="fas fa-plus mr-2"></i> Nuevo Curso
                </a>
                <a href="@Url.Action("Index", "Courses")" class="btn btn-info">
                    <i class="fas fa-list mr-2"></i> Ver Cursos
                </a>
            </div>
        </div>

        <!-- CURSOS RECIENTES -->
        <div class="box">
            <h2 class="subtitle">Cursos recientes</h2>
            <div id="recentCourses">
                <button class="btn btn-light" disabled>Loading...</button>
            </div>
        </div>

    </main>
</div>

<!-- SCRIPTS -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    window.addEventListener('DOMContentLoaded', loadDashboardData);
</script>

</body>
</html>
